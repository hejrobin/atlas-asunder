{
  "compilerOptions": {
    "target": "es6",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
		"noImplicitAny": true,
    "noEmit": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
		"baseUrl": "src"
  },
  "lib": [
    "dom",
    "dom.iterable",
    "esnext"
  ],
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}
